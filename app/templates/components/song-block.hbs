<div class="card">
    {{#if image}}
      <img src="{{image}}" width="100" {{action "toggleAlbumInfo"}}/>
    {{/if}}
  <div class="info">
    {{#if showArtistName}}
      Artist: {{artist}}<br>
    {{/if}}
    Name: <a href="{{id}}" target="_blank">{{name}}</a><br>
    Popularity: {{popularity}}<br>
  {{#if expandAlbumInfo}}

    Album Name: <a href="{{albumUrl}}">{{albumName}}</a><br>
    Album Markets: {{albumMarkets}}<br>
  {{/if}}
</div>
</div>
{{yield}}
