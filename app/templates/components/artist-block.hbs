<li class="card">
  {{#if image}}
    {{#link-to 'playlist' id}}
      <img src="{{image}}" width="100"/>
    {{/link-to}}
  {{/if}}
  <div class="info">
    Name: {{name}}<br>
    {{#if genres}}
      Genres: {{genres}}<br>
    {{/if}}
    Popularity: {{popularity}}<br>
    {{#link-to 'playlist' id}} Listen to Songs by {{name}}{{/link-to}}<br>
    {{#link-to 'related' id}}Find Related Musicians{{/link-to}}<br>
    {{#link-to 'radio' name id}}Create {{artist}} radio{{/link-to}}
  </div>
  <br>
  {{yield}}
</li>
